{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "declarationMap": false,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "declaration": true,
    "rootDir": "src/",
    "outDir": "./dist"
  },
  "include": [ "src" ],
  "exclude": [ "node_modules" ],
  "references": [
    { "path": "../jslib" },
  ]
}
